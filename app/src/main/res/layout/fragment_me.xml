                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_matchPlayer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight=".35"
                        android:background="@drawable/done_corner_round_acent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_total_match"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Matches Played"
                            android:textColor="@color/colorBlack"
                            android:textSize="13sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorSecondary" />

                    <LinearLayout
                        android:id="@+id/layout_totalKill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight=".32"
                        android:background="@drawable/done_corner_round_acent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_kill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total Kill"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/colorSecondary" />

                    <LinearLayout
                        android:id="@+id/layout_won"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight=".33"
                        android:background="@drawable/done_corner_round_acent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_won"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Amount Won"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.design.widget.CoordinatorLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>